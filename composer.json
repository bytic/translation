    "bytic/container": "^0.9",
    "bytic/collections": "^1.0",
    "bytic/filesystem": "^0.9",
    "bytic/locale-detector": "^1.0",
    "symfony/finder": "^4.0",
    "psr/http-server-middleware": "^1.0"
  },
  "require-dev": {
    "bytic/collections": "^1.0",
    "squizlabs/php_codesniffer": "^3.0",
    "bytic/router": "^0.9",
    "phpunit/phpunit": "^7.2",
    "mockery/mockery": "^1.0"
  }
}