{
  "name": "bytic/translation",
  "description": "Bytic translation component",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "autoload": {
    "psr-4": {
      "Nip\\I18n\\": "src/"
    },
    "classmap": [
